<div class="user_show_header">
  <h1> <%= @user.name %> </h1>
</div>

<div class="sort_reviews_links">
<p>Sort Reviews:
  <a href="/users/<%= @user.id%>?sorting=created_at&direction=DESC" >Newest-First</a> /
  <a href= "/users/<%=@user.id%>?sorting=created_at&direction=ASC" >Oldest-First</a>
</p>
</div>

<div class="user_show_reviews">
    <% @reviews.each do |rev| %>
      <div class="user_review_card">
        <span class="review_<%= rev.id  %>">
          <%= rev.title %>
        </span>
        <ul>
          <li> <%= rev.score %> </li>
          <li> <%= rev.description %> </li>
        </ul>
      </div>
    <% end %>
</div>
